      "inline": [
        "# Отключаем проверку неработающих репозиториев",
        "sudo sh -c 'echo \"Acquire::Check-Valid-Until false;\" > /etc/apt/apt.conf.d/99ignore-expired'",
        "sudo sh -c 'echo \"Acquire::AllowInsecureRepositories true;\" >> /etc/apt/apt.conf.d/99ignore-expired'",
        "sudo sh -c 'echo \"Acquire::AllowDowngradeToInsecureRepositories true;\" >> /etc/apt/apt.conf.d/99ignore-expired'"
      ]
